{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "GraphsDSL",
  "scopeName": "source.graphsdsl",
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "include": "#keywords"
    },
    {
      "include": "#strings"
    },
    {
      "include": "#numbers"
    },
    {
      "include": "#operators"
    },
    {
      "include": "#functions"
    },
    {
      "include": "#constants"
    },
    {
      "include": "#variables"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.graphsdsl",
          "match": "//.*$"
        },
        {
          "name": "comment.block.graphsdsl",
          "begin": "/\\*",
          "end": "\\*/"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.graphsdsl",
          "match": "\\b(cond|then|else|end|while|do|for|in|skip|print|visualize)\\b"
        },
        {
          "name": "keyword.other.graphsdsl",
          "match": "\\b(graph|edge|queue|unionfind|emptyList|emptyQueue)\\b"
        }
      ]
    },
    "strings": {
      "name": "string.quoted.double.graphsdsl",
      "begin": "\"",
      "end": "\"",
      "patterns": [
        {
          "name": "constant.character.escape.graphsdsl",
          "match": "\\\\."
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.float.graphsdsl",
          "match": "\\b\\d+\\.\\d+\\b"
        },
        {
          "name": "constant.numeric.integer.graphsdsl",
          "match": "\\b\\d+\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.assignment.graphsdsl",
          "match": ":="
        },
        {
          "name": "keyword.operator.arrow.graphsdsl",
          "match": "->"
        },
        {
          "name": "keyword.operator.comparison.graphsdsl",
          "match": "(==|<|>)"
        },
        {
          "name": "keyword.operator.logical.graphsdsl",
          "match": "(&&|\\|\\||!|~)"
        },
        {
          "name": "keyword.operator.arithmetic.graphsdsl",
          "match": "[+\\-*/%]"
        },
        {
          "name": "keyword.operator.ternary.graphsdsl",
          "match": "[?:]"
        },
        {
          "name": "keyword.operator.separator.graphsdsl",
          "match": "[;|&]"
        }
      ]
    },
    "functions": {
      "patterns": [
        {
          "name": "entity.name.function.graph.graphsdsl",
          "match": "\\b(addNode|deleteNode|addEdge|deleteEdge|graphComplement|graphUnion|graphIntersection|getEdges|adjacentNodes|adjacentEdges|esCiclico|esConexo|metricClosure|metricClosurePaths)\\b"
        },
        {
          "name": "entity.name.function.edge.graphsdsl",
          "match": "\\b(getWeight|getNode1|getNode2)\\b"
        },
        {
          "name": "entity.name.function.list.graphsdsl",
          "match": "\\b(lenList|headList|lastList|tailList|initList|reverseList|appendList|consList|concatList|sortByWeight|inList|isEmptyList)\\b"
        },
        {
          "name": "entity.name.function.queue.graphsdsl",
          "match": "\\b(queueLen|enqueue|dequeue|peek|isEmptyQueue)\\b"
        },
        {
          "name": "entity.name.function.unionfind.graphsdsl",
          "match": "\\b(union|find)\\b"
        }
      ]
    },
    "constants": {
      "patterns": [
        {
          "name": "constant.language.boolean.graphsdsl",
          "match": "\\b(true|false)\\b"
        }
      ]
    },
    "variables": {
      "patterns": [
        {
          "name": "variable.other.graphsdsl",
          "match": "\\b[a-zA-Z][a-zA-Z0-9_]*\\b"
        }
      ]
    }
  }
}
